<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" tools:showIn="@layout/app_bar_main"
    tools:context=".MainActivity">

    <TextView android:text="Марка" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textSize="25dp"
        android:id="@+id/textBrand" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/car_brands_spinner"
        android:layout_alignBaseline="@+id/textBrand"
        android:layout_alignBottom="@+id/textBrand"
        android:layout_toRightOf="@+id/textBrand"
        android:layout_toEndOf="@+id/textBrand"
        android:entries="@array/car_brands"/>
    <TextView android:text="Модель" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textModel"
        android:layout_margin="15dp"
        android:layout_below="@+id/textBrand"/>
    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/carModelSpinner"
        android:layout_alignBaseline="@+id/textModel"
        android:layout_alignBottom="@+id/textModel"
        android:layout_toRightOf="@+id/textModel"
        android:layout_toEndOf="@+id/textModel"
        android:entries="@array/car_brands"/>


</RelativeLayout>
